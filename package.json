{
	"name": "siga-plugin",
	"version": "0.0.1",
	"description": "This is a sample plugin for Obsidian (https://obsidian.md)",
	"main": "main.js",
	"scripts": {
		"dev": "npm-run-all --parallel dev:*",
		"dev:tailwind": "npx tailwindcss -i src/styles/tailwind.css -o styles.css --watch",
		"dev:esbuild": "node esbuild.config.mjs",
		"build": "npm run build:tailwind && npm run build:esbuild",
		"build:tailwind": "npx tailwindcss -i src/styles/tailwind.css -o styles.css --minify",
		"build:esbuild": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"test": "jest",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"format": "prettier --write 'src/**/*.{js,ts,tsx,md}'",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^14.0.0",
		"@types/jest": "^29.5.11",
		"@types/node": "^16.11.6",
		"@types/react": "^18.0.33",
		"@types/react-dom": "^18.0.11",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"eslint": "^8.57.0",
		"eslint-plugin-react": "^7.37.3",
		"eslint-plugin-react-hooks": "^5.1.0",
		"fs-extra": "^11.3.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.5.0",
		"npm-run-all": "^4.1.5",
		"obsidian": "latest",
		"prettier": "^3.3.3",
		"tailwindcss": "^3.4.15",
		"ts-jest": "^29.1.0",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	"dependencies": {
		"@radix-ui/react-dialog": "^1.1.6",
		"@radix-ui/react-dropdown-menu": "^2.1.6",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	}
}
